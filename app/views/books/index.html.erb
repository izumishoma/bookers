<h1>Books</h1>
<div>
  <p>Title</p>
  <p>Body</p>
</div>
<% @books.each do |book| %>
<span><%= book.title %></span>
<span><%= book.body %></span>
<div>
  <span><%= link_to "Show", book_path(book.id) %></span>
  <span><%= link_to "Edit", edit_book_path(book.id) %></span>
  
</div>
<% end %>



<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>